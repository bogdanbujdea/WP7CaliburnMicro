<Application 
    x:Class="CaliburnAppWP7.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"       
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:caliburnApp="clr-namespace:CaliburnAppWP7">

    <!--Application Resources-->
    <Application.Resources>
        <caliburnApp:Bootstrapper x:Key="Bootstrapper" />
        <ResourceDictionary x:Key="AppStylesDictionary">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>